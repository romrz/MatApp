<resources>

    <style name="ScrollContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">9</item>
        <item name="android:background">#CCCCCC</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:descendantFocusability">beforeDescendants</item>
    </style>

    <style name="MenuStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">#999999</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="MenuButton" parent="@android:Widget.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ExpressionViewStyle">
        <item name="android:orientation">horizontal</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingLeft">@dimen/expression_padding_left</item>
        <item name="android:paddingRight">@dimen/expression_padding</item>
        <item name="android:paddingBottom">@dimen/expression_padding</item>
        <item name="android:paddingTop">@dimen/expression_padding</item>
        <item name="android:longClickable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ExpressionChildLayoutStyle">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MatrixViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/matrix_view_margin</item>
        <item name="android:background">@drawable/matrix_brackets_focused</item>
    </style>

    <style name="MatrixFieldStyle" parent="@android:Widget.EditText">
        <item name="android:inputType">number</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:longClickable">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:enabled">false</item>
        <item name="android:text">0</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="OperatorViewStyle" parent="@android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">@dimen/operator_margin</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="MyNumberPickerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

</resources>
